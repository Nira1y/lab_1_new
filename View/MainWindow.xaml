<Window x:Class="lab_1_new.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab_1_new"
        xmlns:vm="clr-namespace:lab_1_new.ViewModel"
        xmlns:view="clr-namespace:lab_1_new.View" 
        mc:Ignorable="d"
        Title="MainWindow" Height="832" Width="1280"
        WindowStartupLocation = "CenterScreen">

    <Window.DataContext>
        <vm:MainWindiowViewModel/>
    </Window.DataContext>

    <Grid Cursor="">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="88" />
            <ColumnDefinition Width="435" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="140" />
        </Grid.ColumnDefinitions>

        <Rectangle Fill="{StaticResource AccentLight}"/>
        <Rectangle Fill="{StaticResource TaskListBackground}" Grid.Column="1"/>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="68"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Label Style="{StaticResource Heading1}" Content="Задачи"/>
            <Button Style="{StaticResource RoundAccentButton}"
                    Command="{Binding IOpenNewWindow}"/>

            <TextBox x:Name="TaskSearchBox"
                Style="{StaticResource TaskSearchBox}"
                Grid.Row="1"
                Margin="20 0"/>

            <Label IsHitTestVisible="False"
                   Content="Найти задачу..."
                   Grid.Row="1"
                   VerticalAlignment="Center"
                   Foreground="{StaticResource AccentLight}"
                   Margin="40 0 0 0"
                   Visibility="{Binding Text.IsEmpty, ElementName=TaskSearchBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="10,5,10,10">
                <ItemsControl ItemsSource="{Binding Tasks}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource TaskCardStyle}">
                                <view:TaskListItem Width="415" 
                                                   MouseLeftButtonDown="TaskListItem_MouseLeftButtonDown"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <Grid Grid.Column="2" DataContext="{Binding SelectedTask}">
            <Grid.RowDefinitions>
                <RowDefinition Height="230"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Grid Margin="20 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>

                <TextBlock Text="{Binding Title, FallbackValue='Тема задачи'}"
                           Style="{StaticResource Title}"
                           VerticalAlignment="Center"/>

                <Border HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Padding="20 5"
                        CornerRadius="5"
                        Background="LightGray">
                    <TextBlock Text="{Binding TaskCategory, FallbackValue='Категория'}"
                               Foreground="Black"
                               FontWeight="Normal"
                               FontSize="16"/>
                </Border>

                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <TextBlock Text="{Binding Description, FallbackValue='Описание задачи'}"
                               FontSize="16"
                               Foreground="{StaticResource AccentLightClick}"
                               Margin="0 20"
                               TextWrapping="Wrap"/>
                </ScrollViewer>

                <TextBlock Text="{Binding DueDate, StringFormat='Дата: {0:dd/MM/yyyy}', FallbackValue='Дата: 01/01/2025'}"
                           Background="{StaticResource AccentLight}"
                           Padding="20 3"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Grid.Row="2"
                           Foreground="White"/>
            </Grid>

            <Grid Grid.Row="1" Margin="0 20 0 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <TextBlock Style="{StaticResource Title}"
                           Text="Чек-лист задачи"
                           VerticalAlignment="Center"
                           Margin="20 0 0 0"/>

                <ListView Grid.Row="1"
                      ItemsSource="{Binding ChecklistItems}"
                      Background="Transparent"
                      BorderThickness="0"
                      Margin="20 10">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding}" IsChecked="False" Margin="5"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
            <Button Content="Изменить" HorizontalAlignment="Left" Height="40" Margin="20,0,0,0" Grid.Row="2" VerticalAlignment="Center" Width="159" Style="{StaticResource AddTaskButton}" Command="{Binding DataContext.EditTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
            <Button Content="Удалить" HorizontalAlignment="Left" Height="40" Margin="448,0,0,0" VerticalAlignment="Center" Width="159" Grid.Row="2" RenderTransformOrigin="0.253 0.49" Style="{StaticResource Delete}" Command="{Binding DataContext.DeleteTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
        </Grid>
        <Rectangle Fill="{StaticResource TaskStatusBackground}" Grid.Column="3"/>
    </Grid>
</Window>