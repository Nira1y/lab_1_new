<Window x:Class="lab_2_graphic_editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:lab_2_graphic_editor.View.Controls"
        xmlns:local="clr-namespace:lab_2_graphic_editor"
        xmlns:vm="clr-namespace:lab_2_graphic_editor.ViewModel" 
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">


    <Window.DataContext>
        <vm:StatusViewModel/>
    </Window.DataContext>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Новый" Click="NewProject_Click"/>
                <MenuItem Header="Открыть" Click="OpenProject_Click"/>
                <MenuItem Header="Сохранить" Click="SaveProject_Click"/>
                <Separator/>
                <MenuItem Header="Экспорт в PNG" Click="ExportToPng_Click"/>
                <MenuItem Header="Экспорт в JPEG" Click="ExportToJpeg_Click"/>
                <Separator/>
                <MenuItem Header="Выход" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Правка">
            </MenuItem>
            <MenuItem Header="Вид">
            </MenuItem>
            <MenuItem Header="Инструменты">
                <MenuItem Header="Курсор" Click="SelectCursor_Click"/>
                <MenuItem Header="Линия" Click="SelectLine_Click"/>
                <MenuItem Header="Прямоугольник" Click="SelectRectangle_Click"/>
                <MenuItem Header="Прямоугольник (с заливкой)" Click="SelectRectangleFill_Click"/>
                <MenuItem Header="Эллипс" Click="SelectEllipse_Click"/>
                <MenuItem Header="Эллипс (с заливкой)" Click="SelectEllipseFill_Click"/>
                <MenuItem Header="Треугольник" Click="SelectTriangle_Click"/>
                <MenuItem Header="Треугольник(с заливкой)" Click="SelectTriangleFill_Click"/>
                <MenuItem Header="Текст" Click="SelectText_Click"/>
                <MenuItem Header="Ластик" Click="SelectEraser_Click"/>
            </MenuItem>
            <MenuItem Header="Упорядочение">
                <MenuItem Header="На передний план" Click="BringToFront_Click" 
                  InputGestureText="Ctrl+Shift+Up"/>
                <MenuItem Header="На задний план" Click="SendToBack_Click" 
                  InputGestureText="Ctrl+Shift+Down"/>
                <Separator/>
                <MenuItem Header="Сгруппировать" Click="GroupElements_Click" 
                  InputGestureText="Ctrl+G"/>
                <MenuItem Header="Разгруппировать" Click="UngroupElements_Click" 
                  InputGestureText="Ctrl+Shift+G"/>
            </MenuItem>
        </Menu>
        <ToolBar DockPanel.Dock="Top" Background="LightGray">
            <Button Content="Курсор" Click="SelectCursor_Click" ToolTip="Выделение и перемещение" Padding="10,5"/>
            <Button Content="Кисть" Click = "SelectBrush_Click" ToolTip="Кисть для рисования" Padding="10,5"/>
            <Button Content="Ластик" Click="SelectEraser_Click" ToolTip="Удаление фигур" Padding="10,5"/>
            <Separator/>

            <TextBlock Text="Цвет: " VerticalAlignment="Center" Margin="5,0,0,0"/>
            <xctk:ColorPicker x:Name="ColorPicker"
                  Width="120" 
                  Height="30"
                  SelectedColor="{Binding CurrentColor, Mode=TwoWay}"
                  ToolTip="Выбор цвета"/>
        </ToolBar>

        <ToolBar DockPanel.Dock="Top" Background="LightBlue" 
                 x:Name="TextToolbarPanel">
            <TextBlock Text="Текст:" VerticalAlignment="Center" Margin="5,0"/>

            <ComboBox ItemsSource="{Binding AvailableFontFamilies}"
                      SelectedItem="{Binding FontFamily}"
                      Width="120" Margin="5,0"
                      ToolTip="Выбор шрифта"/>

            <ComboBox ItemsSource="{Binding AvailableFontSizes}"
                      SelectedItem="{Binding FontSize}"
                      Width="60" Margin="5,0"
                      ToolTip="Размер шрифта"/>

            <Button Content="B" Command="{Binding BoldCommand}" 
                    FontWeight="Bold" Margin="5,0" Width="25"
                    ToolTip="Жирный"/>
            <Button Content="I" Command="{Binding ItalicCommand}" 
                    FontStyle="Italic" Margin="5,0" Width="25"
                    ToolTip="Курсив"/>

            <TextBlock Text="Цвет текста:" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <xctk:ColorPicker SelectedColor="{Binding TextColor, Mode=TwoWay}"
                      Width="80" Height="25" Margin="5,0"
                      ToolTip="Цвет текста"/>
        </ToolBar>
        
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="{Binding Coordinates}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="{Binding CurrentTool}"/>
            </StatusBarItem>
            <Separator/>
        </StatusBar>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <controls:CanvasControl Grid.Column="0" x:Name="DrawingArea" Grid.ColumnSpan="3"/>
        </Grid>
    </DockPanel>
</Window>